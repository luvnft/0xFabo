---
import ContentSection from "~/components/content-section.astro";
import LottieAnimation from "astro-integration-lottie/Lottie.astro";
import type { ServiceItem } from "~/types";
import FeaturesList from "~/components/features-list.astro";

const services: Array<ServiceItem> = [
  { 
    title: "Social Media", 
    subtitle: "CRE CLUB", 
    description: "CRE Discord social media platform subscribers unlock direct access to CRE services, brokers and investors around the world. Embed your TikTok, Instagram and X videos in the CRE Club Discord.", 
    img: "socialMedia", 
    list1: "Strategic management of communication across relevant social media platforms.", 
    list2: "Amplification of your brand in digital landscapes.", 
    list3: "Enhancement of your tokenized digital properties", 
    list4: "Continuous optimization of your digital presence.", 
  },
  { 
    title: "RWA", 
    subtitle: "Tokenizing", 
    description: "We tokenize RWA as a Bitcoin layer2 service exclusively for CRE Club members. We conduct an exhaustive review of your AUM to tokenize your RWA as Bitcoin CRE, which can then be auctioned, sold, or bartered in the CRE Club Discord.", 
    img: "branding", 
    list1: "Crafting 1 of 1 Bitcoin CRE", 
    list2: "Thorough review of corporate image, colors, and identity.", 
    list3: "Transformation of ideas into a visually impactful identity.", 
    list4: "Standing out in the marketplace with a cohesive and compelling visual communication.", 
  },
  {
    title: "$RNT",
    subtitle: "Accept Bitcoin",
    description: "One of the Bitcoin solutions for making CRE great again starts with accepting Bitcoin $RNT, a layer2 Bitcoin token with $0 transaction fees. We onboard CRE Club subscribers to accept $RNT and manage their $RNTal properties.",
    img: "grMkt",
    list1: "Create affordable CRE rentals.",
    list2: "Development of effective strategies through testing and data analysis.",
    list3: "Continuous improvement to reach new levels of success.",
    list4: "Focus on optimization and long-term success.",
  },
  { 
    title: "CRE Effects",
    subtitle: "TikTok & Instagram",
    description: "Inform your social media followers with a branded TikTok or Instagram AR effect sign displaying the stage of the CRE deal. Pay your social media followers in Bitcoin $RNT for promoting your CRE.", 
    img: "socialAds", 
    list1: "Design and execution of high-impact social media campaigns.", 
    list2: "Focus on key objectives such as online sales, lead generation, and branding.", 
    list3: "Tangible results in the short term to drive the success of your business.", 
    list4: "Campaigns focused on increasing foot traffic and calls.", 
  },
  { 
    title: "Web Development", 
    subtitle: "Custom Websites", 
    description: "We build custom Arvrtise websites for promoting your tokenized RWA (Real World Assets).", 
    img: "webDev", 
    list1: "Custom websites that reflect the unique essence of your brand.", 
    list2: "Responsive across all devices.", 
    list3: "Engaging design that captivates your audience.", 
    list4: "Implementation of the latest technologies for an optimal online presence.", 
  },
  { 
    title: "Video Editing", 
    subtitle: "Captivating Videos", 
    description: "We create captivating videos that amplify your CRE in a unique way. Expert editing not only sets your CRE apart but also leads to organic social media growth, especially on platforms like TikTok and Instagram.", 
    img: "edVideos", 
    list1: "Captivating videos that amplify your message in a unique way.", 
    list2: "Expert editing that sets you apart and positions you for organic growth.", 
    list3: "Especially effective on platforms like TikTok and Instagram.", 
    list4: "Maximize the impact of your video content.", 
  },
  { 
    title: "Search Engine Optimization (SEO)", 
    subtitle: "Search Engine Optimization", 
    description: "We boost your CRE online presence with advanced strategies and techniques to optimize your organic search engine rankings. We consistently drive more potential customers to your website.", 
    img: "seo", 
    list1: "Advanced strategies to boost your online presence.", 
    list2: "Organic search engine ranking optimization.", 
    list3: "Consistent increase in potential customers to your website.", 
    list4: "Fueling the growth of your business through effective strategies.", 
  },
  { 
    title: "Search Engine Marketing (SEM)", 
    subtitle: "Effective Advertising", 
    description: "We turbocharge your brand with high-impact CRE advertising strategies across Google, Yahoo, Bing, TikTok, and more, driving highly qualified traffic to your digital properties.", 
    img: "sem", 
    list1: "High-impact advertising strategies across multiple platforms.", 
    list2: "Driving highly qualified traffic to your digital properties.", 
    list3: "Focus on generating sales, capturing leads, and more.", 
    list4: "Maximizing the return on your online presence.", 
  },
];
---

<ContentSection title="Services" id="servicios">
  <Fragment slot="lead">
    We provide CRE Club subscribers with in-house <span class="text-primary"></span>services</span> to learn how to tokenize their RWA.
    <span
      >We use all digital channels to reach your  <span class="text-primary">target audience</span> and maximize
      your budget and <span
        class="text-primary">return on investment</span
      >.</span
    >
  </Fragment>

  {
    services.map((service, index) => (
      <div class="max-w-6xl">
        {index % 2 === 0 ? (
          <div class="md:flex md:flex-row lg:max-h-[27rem] lg:min-h-[27rem] 2xl:max-h-[35rem]">
            <div class="flex flex-col justify-center p-4 text-center md:w-1/2 md:items-end md:text-end">
              <h3 class="mb-2 font-semibold text-gris text-lg md:text-base">
                {service.subtitle}
              </h3>
              <h2 class="gradient-text mb-6 font-extrabold text-6xl md:mb-7 md:text-4xl">
                {service.title}
              </h2>
              <p class="text-balance font-normal text-gris text-base">
                {service.description}
              </p>
            </div>
            <div class="my-6 justify-center md:my-12 md:w-1/2">
              <div class="m-auto max-w-80 md:max-w-sm 2xl:max-w-lg">
                <LottieAnimation
                  src={`/lotties/${service.img}.json`}
                  loop
                  autoplay="visible"
                />
              </div>
            </div>
          </div>
        ) : (
          <div class="flex flex-col-reverse md:flex-row lg:max-h-[27rem] lg:min-h-[27rem] 2xl:max-h-[35rem]">
            <div class="my-6 justify-center md:my-12 md:w-1/2">
              <div class="m-auto max-w-80 md:max-w-sm 2xl:max-w-lg">
                <LottieAnimation
                  src={`/lotties/${service.img}.json`}
                  loop
                  autoplay="visible"
                />
              </div>
            </div>
            <div class="flex flex-col justify-center p-4 text-center md:w-1/2 md:items-start md:text-start">
              <h3 class="mb-2 font-semibold text-gris text-lg md:text-base">
                {service.subtitle}
              </h3>
              <h2 class="gradient-text mb-6 font-extrabold text-6xl md:mb-7 md:text-4xl">
                {service.title}
              </h2>
              <p class="font-normal text-gris text-base">
                {service.description}
              </p>
            </div>
          </div>
        )}
      </div>
    ))
  }
</ContentSection>

